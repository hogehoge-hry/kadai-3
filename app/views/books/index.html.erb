<!-- 本の一覧表示 -->

<p><%= flash[:notice] %></p>


<!-- エラーメッセージ -->
<% if @book.errors.any? %>
 <%= @book.errors.count %> error prohibited this book from being saved:
 <% @book.errors.full_messages.each do |message| %>
   <%= message %>
 <% end %>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <!-- 部分テンプレートからUserInfoと新規作成用フォームを設置-->
    <%= render 'books/user_data', book: @book ,user: current_user%>

    <!-- 右のページとしてbookリストを作成-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <!-- タイトルと感想文の見出しを作成-->
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <!-- 本の一覧を表示-->
          <% @books.each do |book| %>
          <tr>
            <!-- 本に対応したユーザーの写真を表示しユーザーページへのリンク-->
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <!-- 本のタイトル -->
            <td><%= link_to book.title,book_path(book.id) %></td>
            <!-- 本のテキスト -->
            <td class="table-text"><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>